<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SnackBarActivity">

    <com.microsoft.fluentui.appbarlayout.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/demo_detail_scrollable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="@drawable/demo_divider"
            android:padding="@dimen/default_layout_margin"
            android:showDividers="middle">

            <TextView
                style="@style/TextAppearance.FluentUI.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/demo_headline_padding_bottom"
                android:text="@string/single_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/demo_headline_divider_height"
                android:background="@drawable/ms_row_divider" />

            <TextView
                style="@style/TextAppearance.FluentUI.SubHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/short_duration" />

            <com.microsoft.fluentui.widget.Button
                android:id="@+id/btn_regular_length_short_snack_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_snack_bar" />


            <TextView
                style="@style/TextAppearance.FluentUI.SubHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/short_duration_with_action" />

            <com.microsoft.fluentui.widget.Button
                android:id="@+id/btn_regular_length_short_action_snack_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_snack_bar" />

            <TextView
                style="@style/TextAppearance.FluentUI.SubHeading1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/long_duration_with_circular_progress_as_small_custom_view" />

            <com.microsoft.fluentui.widget.Button
                android:id="@+id/btn_regular_length_long_custom_view_circular_progress_snack_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_snack_bar" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>